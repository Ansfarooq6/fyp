<%- include('../includes/head.ejs')  %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/cart.css">
<link rel="stylesheet" href="/css/navbar">
    </head>
    <body>
        <%- include('../includes/mocknav.ejs')  %>
        <main>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <h1><%= p.productId.title %></h1>
                        <h2>Quantity: <%= p.quantity %></h2>
                    </li>
                <% }) %>
            </ul>
            <div class="centered">
                <h2>Total:  $<%= totalSum %></h2>
            </div>
            <div class="centered">
                <button class="btn" id="orderBtn">Order Now</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51PICjRG6Qc0pxCXDlsdueXMRwxcV4oUJBe2LXEGvSUBQrNnAsyNYH47y1th9kCnfzcpuRjvy7pVj5oV8m1WYNPpQ00zY8iRiWa');
                    var orderBtn = document.getElementById('orderBtn');
                    orderBtn.addEventListener('click', function() {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        }).then(function (result) {
                            if (result.error) {
                                // Display an error to the customer
                                alert(result.error.message);
                            }
                        });
                    });
                </script>
            </div>
            

        </main>
        <%- include('../includes/end.ejs')  %>